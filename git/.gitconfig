[user]
	name = Adam Hollett
	email = mail@adamhollett.com

[core]
	editor = nano

[fetch]
	prune = true

[rebase]
	autoStash = true

[help]
  # If autocorrect comes up with only one suggestion, automatically run it after
  # a delay (in decaseconds)
	autoCorrect = 20

[alias]
  a  = add
  aa = add -A
  b  = branch
  bc = checkout -b
  bd = branch --delete
  bD = branch --delete --force
  cm = commit --message
  co = checkout
  fm = pull
  p  = push
  sl = stash list
  sp = stash pop
  ss = stash save
  ws = status --short
